{
  "experiment_name": "lease_abstraction_versioned_training",
  "base_model": "mistralai/Mistral-7B-v0.1",
  "use_qlora": true,

  "dataset_spec": "lease_abstraction_training@latest",
  "dataset_type": "lease_abstraction",

  "version_db_url": "sqlite:///dataset_versions.db",
  "storage_backend": "local",

  "output_dir": "./models/versioned_training",

  "num_epochs": 3,
  "batch_size": 4,
  "eval_batch_size": 4,
  "gradient_accumulation_steps": 16,
  "learning_rate": 0.0002,
  "max_length": 512,

  "lora_rank": 16,
  "lora_alpha": 32,
  "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj"],
  "lora_dropout": 0.05,

  "logging_steps": 10,
  "save_steps": 500,
  "eval_steps": 500,
  "warmup_steps": 100,
  "weight_decay": 0.01,

  "use_wandb": false,
  "wandb_project": "deepiri",
  "mlflow_uri": "http://localhost:5000"
}
