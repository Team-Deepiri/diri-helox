{
  "name": "trailblip-mag",
  "version": "2.0.0",
  "description": "Micro-Adventures Generator 2.0 - AI-powered local experience platform",
  "private": true,
  "type": "module",
  "dependencies": {
    "firebase": "^11.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.22.1",
    "web-vitals": "^3.5.0"
  },
  "scripts": {
    "start": "cd server && npm start",
    "build": "cd client && npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky install",
