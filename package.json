{
  "name": "tripblip-mag",
  "version": "2.0.0",
  "description": "Micro-Adventures Generator 2.0 - AI-powered local experience platform",
  "private": true,
  "type": "module",
  "dependencies": {
    "firebase": "^11.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.22.1",
    "web-vitals": "^3.5.0"
  },
  "scripts": {
    "start": "cd server && npm start",
    "build": "cd client && npm run build",
    "build:frontend": "npm --prefix client run build",
    "dev:frontend": "npm --prefix client run dev",
    "preview:frontend": "npm --prefix client run preview",
    "docker:build:frontend": "docker compose up -d --build frontend",
    "docker:logs:frontend": "docker logs -f tripblip-frontend",
    "preview": "vite preview",
    "test": "npm run test:node && npm run test:python",
    "test:node": "cd server && npm test",
    "test:python": "cd python_backend && pip install -q -r requirements.txt && pytest -q",
    "start:all": "docker-compose up -d",
    "rebuild:all": "docker-compose build --no-cache && docker-compose up -d",
    "stop:all": "docker-compose down",
    "logs:all": "docker-compose logs -f --tail=100",
    "smoke": "npm run start:all && node -e \"const http=require('http');const urls=['http://localhost:5000/api/health','http://localhost:8000/health'];let ok=0;let done=0;urls.forEach(u=>http.get(u,res=>{ok+=res.statusCode===200?1:0;done++;if(done===urls.length){console.log('Health OK',ok,'/',urls.length);process.exit(ok===urls.length?0:1);}}).on('error',()=>{done++;if(done===urls.length){process.exit(1);}}));\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky install",
    "dev": "node dev-start.js",
    "dev:concurrent": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "dev:fast": "cd client && npm run dev:fast",
    "setup": "npm install && cd server && npm install && cd ../client && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "vite": "^5.2.8",
    "vitest": "^1.5.0",
    "concurrently": "^8.2.2"
  }
}