# CPU-only version for development (much faster, no CUDA downloads)
# Use this for local development if you don't need GPU
FROM pytorch/pytorch:2.0.0-cpu

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_DEFAULT_TIMEOUT=300 \
    PIP_RETRIES=3 \
    TRANSFORMERS_CACHE=/app/.cache/huggingface \
    HF_HOME=/app/.cache/huggingface \
    SENTENCE_TRANSFORMERS_HOME=/app/.cache/sentence_transformers

# Set working directory
WORKDIR /app

# Install system dependencies and clean up in one layer
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements first for better caching
COPY requirements.txt /app/requirements.txt

# Install core dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir --timeout=300 --retries=3 \
        fastapi==0.112.2 \
        uvicorn[standard]==0.30.6 \
        pydantic==2.8.2 \
        pydantic-settings==2.2.1 \
        openai==1.43.0 \
        python-dotenv==1.0.1 \
        httpx==0.27.2 \
        structlog==24.1.0 \
        python-json-logger==2.0.7 \
        prometheus-client==0.20.0 \
        redis==5.0.1 \
        pytest==8.3.2 \
        pytest-asyncio==0.23.5 \
        pytest-cov==4.1.0

# Install ML libraries (PyTorch CPU already in base image)
RUN pip install --no-cache-dir --timeout=300 --retries=3 \
        transformers>=4.30.0 \
        datasets>=2.14.0 \
        accelerate>=0.20.0 \
        sentence-transformers>=2.2.0 \
        scikit-learn>=1.3.0 \
        numpy>=1.24.0 \
        pandas>=2.0.0

# Install optional packages (skip GPU-specific ones)
RUN pip install --no-cache-dir --timeout=300 --retries=2 \
        mlflow>=2.7.0 \
        wandb>=0.15.0 || echo "Warning: mlflow/wandb installation failed, continuing..." && \
    pip install --no-cache-dir --timeout=300 --retries=2 \
        gymnasium>=0.29.0 || echo "Warning: gymnasium installation failed (optional), continuing..."

# Install vector database clients (optional)
RUN pip install --no-cache-dir --timeout=300 --retries=2 \
        pymilvus>=2.3.0 \
        pinecone-client>=3.0.0 \
        weaviate-client>=4.0.0 || echo "Warning: vector DB clients installation failed (optional), continuing..."

# Install other optional packages
RUN pip install --no-cache-dir --timeout=300 --retries=2 \
        influxdb-client>=1.38.0 \
        kubernetes>=28.1.0 \
        optuna>=3.5.0 \
        hyperopt>=0.2.7 \
        tensorboard>=2.15.0 || echo "Warning: optional packages installation failed, continuing..."

# Verify critical packages
RUN python -c "import numpy; print('✓ numpy version:', numpy.__version__)" && \
    python -c "import torch; print('✓ torch version:', torch.__version__)" && \
    python -c "import sentence_transformers; print('✓ sentence-transformers installed')" || \
    (echo "ERROR: Failed to verify critical packages" && pip list | grep -E "(numpy|torch|sentence)" && exit 1)

# Create non-root user and set up directories
RUN groupadd -r appuser && useradd -r -g appuser appuser && \
    mkdir -p /app/logs /app/.cache/huggingface /app/.cache/sentence_transformers && \
    chown -R appuser:appuser /app

# Copy application code
COPY app /app/app

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Start the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]

