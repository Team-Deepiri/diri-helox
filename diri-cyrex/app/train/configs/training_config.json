{
  "experiment_name": "deepiri_task_classifier",
  "base_model": "mistralai/Mistral-7B-v0.1",
  "use_qlora": true,
  "lora_rank": 16,
  "lora_alpha": 32,
  "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj"],
  "train_dataset_path": "train/data/task_classification.jsonl",
  "validation_dataset_path": "train/data/task_classification_val.jsonl",
  "output_dir": "train/models/task_classifier",
  "num_epochs": 3,
  "batch_size": 4,
  "gradient_accumulation_steps": 16,
  "learning_rate": 2e-4,
  "max_length": 512,
  "use_deepspeed": true,
  "deepspeed_config": "ds_config.json",
  "use_wandb": false,
  "mlflow_uri": "http://localhost:5000",
  "logging_steps": 10,
  "save_steps": 500,
  "eval_steps": 500,
  "warmup_steps": 100,
  "weight_decay": 0.01
}

