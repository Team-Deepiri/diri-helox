# ========================================
# DEEPIRI FRONTEND (CLIENT) ENVIRONMENT
# ========================================
# Copy this to .env.local and configure your values
# Supports both local development and Docker deployments

# ========================================
# API ENDPOINTS
# ========================================
# Local Development
VITE_API_URL=http://localhost:5000/api
VITE_CYREX_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:5000

# Production URLs
# VITE_API_URL=https://api.deepiri.com/api
# VITE_CYREX_URL=https://agent.deepiri.com
# VITE_WS_URL=wss://api.deepiri.com

# ========================================
# APPLICATION SETTINGS
# ========================================
VITE_APP_NAME=Deepiri
VITE_APP_VERSION=1.0.0
VITE_DEBUG_MODE=true
VITE_ENVIRONMENT=development

# ========================================
# FIREBASE CLIENT CONFIGURATION
# ========================================
VITE_FIREBASE_API_KEY=your-firebase-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# EXTERNAL SERVICES (CLIENT-SIDE)
# ========================================
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
VITE_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
VITE_FACEBOOK_PIXEL_ID=1234567890123456

# ========================================
# FEATURE FLAGS
# ========================================
VITE_FEATURE_CHAT_ENABLED=true
VITE_FEATURE_SOCIAL_LOGIN=true
VITE_FEATURE_PAYMENTS=false
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=true
VITE_FEATURE_OFFLINE_MODE=false

# ========================================
# PAYMENT PROCESSING (CLIENT-SIDE)
# ========================================
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# File watching for Docker
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# HMR Configuration
VITE_HMR_PORT=5173
VITE_HMR_HOST=localhost

# ========================================
# BUILD CONFIGURATION
# ========================================
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_LEGACY_SUPPORT=false
